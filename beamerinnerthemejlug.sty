% Title page
\defbeamertemplate*{title page}{jlug}[1][]
{  	\vskip59.5mm%
	\begin{beamercolorbox}[wd=245mm, left, #1]{author}
		\hspace{9mm}\usebeamerfont{author}\insertauthor\ | \insertinstitute\ %
	\end{beamercolorbox}
	\begin{beamercolorbox}[wd=245mm, left, #1]{date}
		\hspace{9mm}\usebeamerfont{author}\insertdate%
	\end{beamercolorbox}
	\vskip0.3cm%
	\begin{beamercolorbox}[wd=245mm,#1,left]{title page header}
		\hspace{9mm}\usebeamerfont{title}\inserttitle\par%
		\hspace{9mm}\usebeamerfont{title}\insertsubtitle\par%
	\end{beamercolorbox}%
	\vfill
}

