\mode<presentation>

% Generated with the help of
% https://tex.stackexchange.com/questions/146529/design-a-custom-beamer-theme-from-scratch
% Thank you Claudio Fiandrino!

% Requirement
\RequirePackage{tikz}

% Settings
\usecolortheme{jlug}	% Colors
\useinnertheme{jlug}
\useoutertheme{jlug}
\usefonttheme{jlug} 	% Fonts

% navigation / footnotes
\setbeamertemplate{navigation symbols}{%
	\ifnum\thepage>1\relax% Not on the front page
		\usebeamerfont{footline}%
		\usebeamercolor[fg]{footline}%
		\insertauthor \quad | \quad %
		\insertframenumber \quad
	\fi
}

% cutomise blocks
\setbeamertemplate{blocks}[rounded][shadow=false]  

% enumeration symbols
\setbeamertemplate{items}[circle]

\mode<all>